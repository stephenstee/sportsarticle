<%- include("partials/header")%>


<div class="container mt-5">
<form action="/home/<%=games._id %>?_method=PUT" method="POST">
	<h1 class="display-4">Edit Article</h1>
	<hr>
	<div class="form-group">
		<input type="text" name="sport[title]" class="form-control" value="<%= games.title%>">
	</div>
	<div class="form-group">
		<input type="text" class="form-control" value="<%= games.image %>" name="sport[image]">		
	</div>
	<div class="form-group">
		<textarea class="form-control" name="sport[description]"><%= games.description %></textarea>
	</div>
    
   <button type="submit" class="btn btn-outline-danger btn-lg">Upload</button>

</form>
</div>


<%- include("partials/footer") %>